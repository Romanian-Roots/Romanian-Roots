generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CultureCapsule {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  isPremium Boolean  @default(false)
  createdAt DateTime @default(now())

  capsules  CultureCapsule[]
}
