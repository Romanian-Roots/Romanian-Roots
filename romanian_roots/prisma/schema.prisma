generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ----------------------------------------------------------- */
/*  ENUMS                                                      */
/* ----------------------------------------------------------- */

enum CapsuleStatus {
  FOUND       // already discovered (exact pin)
  SPONSOR     // placed by a regular user; behaves like FOUND
  CLUE        // not yet found; pin exists but description says “±10 m”
}

/* ----------------------------------------------------------- */
/*  MODELS                                                     */
/* ----------------------------------------------------------- */

model User {
  id        String           @id @default(uuid())
  name      String
  email     String           @unique
  password  String
  isPremium Boolean          @default(false)
  createdAt DateTime         @default(now())

  capsules  CultureCapsule[]
}

model CultureCapsule {
  id          String   @id @default(uuid())
  name        String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())

  /* Geo-location ------------------------------------------- */
  latitude    Float
  longitude   Float

  /* Status & code ------------------------------------------- */
  status      CapsuleStatus @default(CLUE)
  codeHash    String                       // hashed 4-digit code

  /* Relation to creator ------------------------------------- */
  userId String
  user   User     @relation(fields: [userId], references: [id])
}
